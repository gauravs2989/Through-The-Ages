{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "common/*": ["app/common/*"],
      "cards/*": ["app/cards/*"],
      "cardrow/*": ["app/cardrow/*"],
      "resources/*": ["app/resources/*"],
      "wonders/*": ["app/wonders/*"]
    }
  }
}
